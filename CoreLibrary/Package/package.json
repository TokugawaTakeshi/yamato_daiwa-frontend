{
	"name": "@yamato-daiwa/frontend",
	"version": "2.0.0-beta.6",
	"description": "Toolkit for the frontend development with Pug and Stylus pre-processors.",
	"keywords": [
		"frontend",
		"pug",
		"stylus"
	],
	"author": {
		"name": "Takeshi Tokugawa",
		"email": "tokugawa.takesi@gmail.com"
	},
	"license": "MIT",
	"homepage": "https://frontend.yamato-daiwa.com/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TokugawaTakeshi/yamato_daiwa-frontend.git"
	},
	"bugs": {
		"url": "https://github.com/TokugawaTakeshi/yamato_daiwa-frontend/issues",
		"email": "tokugawa.takesi@gmail.com"
	},
	"files": [
		"GUI_Components",
		"!GUI_Components/**/*.ts",
		"!GUI_Components/**/*.template.pug",
		"LogicDistributable",
		"Markup",
		"!Markup/Source",
		"PagesTemplates",
		"!PagesTemplates/StaticPreviewAnywherePage/StaticPreviewAnywherePage.styl",
		"Styles",
		"Functionality.pug",
		"Functionality.styl",
		"GUI_Components.pug",
		"GUI_Components.styl"
	],
	"module": "./LogicDistributable/index.js",
	"types": "./LogicDistributable/index.d.ts",
	"dependencies": {
		"@yamato-daiwa/es-extensions": "1.8.0-alpha.9",
		"@yamato-daiwa/es-extensions-browserjs": "1.8.0-alpha.6",
		"clipboard": "2.0.11",
		"fundamental-constants": "0.5.0",
		"prismjs": "1.29.0",
		"slide-element": "2.3.1"
	},
	"devDependencies": {
		"@types/prismjs": "1.26.5",
		"@yamato-daiwa/automation": "0.5.0",
		"@yamato-daiwa/style_guides": "0.3.2",
		"rimraf": "6.0.1",
		"ts-node": "10.9.2",
		"typescript": "5.6.3"
	},
	"scripts": {
		"Building of Pug Auxiliaries": "yda build --selectiveExecution PugAuxiliaries --mode PRODUCTION && ts-node Markup/InlineECMAScript/PugAuxiliariesOutputFileGenerator.ts",
		"Production Building of Logic": "rimraf LogicDistributable && yda build --selectiveExecution Logic --mode PRODUCTION && tsc --project tsconfig.declarations.json --declaration --emitDeclarationOnly --outDir LogicDistributable",
		"Incremental Building of Anywhere Page Template Styles": "yda build --selectiveExecution StaticPreviewAnywherePage --mode LOCAL_DEVELOPMENT",
		"Tests": "yda build --selectiveExecution StylesAndComponentsTesting --mode LOCAL_DEVELOPMENT",
		"Start Workbenches": "yda build --selectiveExecution Workbenches --mode LOCAL_DEVELOPMENT",
		"Realize Alpha": "npm publish --tag alpha",
		"Realize Beta": "npm publish --tag beta",
		"Realize RC": "npm publish --tag rc"
	}
}
