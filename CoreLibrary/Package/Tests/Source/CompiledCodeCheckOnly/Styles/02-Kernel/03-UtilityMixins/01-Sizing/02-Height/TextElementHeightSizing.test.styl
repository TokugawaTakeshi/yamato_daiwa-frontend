@require "01-Assets.styl"
@require "02-Kernel.styl"


// Single-line element natural sizing (applicable to input-type buttons, badges etc.)
.SingleLineElement-NaturalHeightSizing-LineHeight

  TextElementHeightSizing({
    type: TextElementHeightSizingTypes--YDF.natural,
    borders: {
      verticalSymmetric: 1px
    },
    isExplicitBorderNoneDeclarationRequired: true,
    paddings: {
      verticalSymmetric: 6px,
      upwardShifting: 1px
    },
    isExplicitPaddingZeroDeclarationRequired: true,
    fontSize: 14px,
    lineHeight: 1
  })


