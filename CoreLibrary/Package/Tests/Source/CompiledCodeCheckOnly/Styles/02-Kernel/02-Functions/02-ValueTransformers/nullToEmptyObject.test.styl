testForTrue(
  "Null has been transformed to empty object",
  typeof(nullToEmptyObject(null)) == "object" && length(nullToEmptyObject(null)) == 0
)

testForFalse(
  "Empty string has NOT been transformed to object",
  typeof(nullToEmptyObject("")) == "object"
)

testForFalse(
  "Non-empty string has NOT been transformed to object",
  typeof(nullToEmptyObject("ABC")) == "object"
)

testForFalse(
  "Number has NOT been transformed to object",
  typeof(nullToEmptyObject(1)) == "object"
)
