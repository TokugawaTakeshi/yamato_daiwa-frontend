@require "../../../Functionality.styl"
@require "../../../Components.styl"


CrossBrowserStylesReset()
InitialGlobalCSS_Rules()

provideYDF_Typography()


.YDF_ColorPaletteTesting

  padding 6px


  &-MultilineFlow

    display flex
    flex-wrap wrap

    margin-top 12px


    >*

      padding 10px 16px
      text-align center

      font-weight bold

      flex 0 1 100px


  &-VerticalFlow

    margin-top 24px


    >*

      padding 4px 6px

      font-weight bold


  &-TableScroller

    overflow-x auto


  &-HSL_Table

    width 100%


    thead

      th

        padding 10px


    tbody

      th,
      td

        padding 10px
        border 4px solid gray

      td

        text-align center


  &-YDFColorPalette_Table

    width 100%


    thead

      th

        padding 10px


    tbody

      th,
      td

        padding 10px
        border 4px solid gray


      th

        text-align right


      td

        text-align center
