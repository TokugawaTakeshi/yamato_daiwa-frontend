@require "Themes/Regular/GeometricVariations/Link-RegularTheme-RegularDecoration.styl"
@require "Themes/Regular/DecorativeVariations/Link-RegularTheme-RegularGeometry.styl"


Link--YDF = {

  CSS_NAMESPACE: "Link--YDF",

  defaultProperties: {

    themes: {
      regular: {

        componentIndependentCSS_Class: "RegularTheme--YDF",

        geometricVariations: {
          regular: Link-RegularTheme-RegularGeometry--YDF
        },

        decorativeVariations: {
          regular: Link-RegularTheme-RegularDecoration--YDF
        }

      }
    }

  },

  defaultOptions: {
    themeIndependentStylesOnly: false,
    areThemesCSS_ClassesCommon: false
  }

}


provideLinkYDF_Component(
  preset = Link--YDF.defaultProperties,
  overridings = {},
  options = Link--YDF.defaultOptions,
  restParameters__MUST_NOT_BE...
)

  properties = deeplyCloneAndOverrideObject(preset, overridings)

  validateObjectTypeParameter({
    mixinOrFunctionName: "provideButtonYDF_Component",
    targetParameterNumber: 3,
    targetParameter: options,
    schema: {
      themeIndependentStylesOnly: {
        type: DataTypes--YDF.boolean,
        defaultValue: Link--YDF.defaultOptions.themeIndependentStylesOnly
      },
      areThemesCSS_ClassesCommon: {
        type: DataTypes--YDF.boolean,
        defaultValue: Link--YDF.defaultOptions.externalThemes
      }
    },
    followingParametersWhichMustNotBe: restParameters__MUST_NOT_BE
  })


  // ━━━ Methods ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  applyBasicRules()

    .Link--YDF

      line-height 1

      color: JQueryUI_BaseTheme.clickableElements.activeState.borderColor

      text-decoration-line underline
      text-decoration-color: JQueryUI_BaseTheme.clickableElements.activeState.borderColor
      text-underline-offset 2px

      cursor pointer


      &:hover

        color: JQueryUI_BaseTheme.clickableElements.activeState.background
        text-decoration-color: rgba(JQueryUI_BaseTheme.clickableElements.activeState.background, 0.75)


      &:focus-visiable

        color: JQueryUI_BaseTheme.clickableElements.activeState.background
        text-decoration-color: rgba(JQueryUI_BaseTheme.clickableElements.activeState.background, 0.75)
        outline 1px solid JQueryUI_BaseTheme.warning.fontColor
        outline-offset 1px


      &:active

        color: JQueryUI_BaseTheme.warning.fontColor
        text-decoration-color: JQueryUI_BaseTheme.warning.fontColor


      &__DisabledState

        color: JQueryUI_BaseTheme.clickableElements.activeState.background
        text-underline-color: rgba(JQueryUI_BaseTheme.clickableElements.activeState.background, 0.5)


  // ─── Geometry ──────────────────────────────────────────────────────────────────────────────────────────────────────
  applyGeometricVariation(themeName, variationName, variation)

    VARIATION_FULLY_QUALIFIED_NAME_FOR_LOGGING = buildString(
      "Link.${ themeName }Theme.${ variationName }Geometry",
      { themeName: themeName, variationName: variationName }
    )


  // ─── Decoration ────────────────────────────────────────────────────────────────────────────────────────────────────
  applyDecorativeVariation(themeName, variationName, variation)

    VARIATION_FULLY_QUALIFIED_NAME_FOR_LOGGING = buildString(
      "Button.${ themeName }Theme.${ variationName }Decoration",
      {
        themeName: themeName,
        variationName: variationName
      }
    )


  // ━━━ Applying ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  applyBasicRules()

  if !options.themeIndependentStylesOnly

    applyComponentThemes({
      CSS_Namespace: "Link--YDF",
      themes: properties.themes,
      areThemesCSS_ClassesCommon: options.externalThemes,
      themeIndependentGeometricVariations: options.themeIndependentGeometricVariations,
      applyGeometricVariation: applyGeometricVariation,
      applyDecorativeVariation: applyDecorativeVariation
    })
