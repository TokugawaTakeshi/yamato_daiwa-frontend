{
  "compilerOptions": {

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "removeComments": true,

    "outDir": "LogicDistributable",
    "declaration": true

  },

  "include": [
    "index.ts",
    "GUI_Components",
    "Components"
  ]

}
